# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.c]
indent_style = space
indent_size = 4

[*.h]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

